{
    "compilerOptions": {
        "target": "ESNext",
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "types": ["vite-plugin-electron/electron-env"]
    },
    "include": ["package.json", "electron"]
}
